# --- lokales venv unter <repo>/.venv ---
VENV_DIR="${ROOT}/.venv"
if [ ! -d "$VENV_DIR" ]; then
  python3 -m venv "$VENV_DIR"
fi
# venv aktivieren (direnv rollt beim Verlassen automatisch zur√ºck)
source "$VENV_DIR/bin/activate"


